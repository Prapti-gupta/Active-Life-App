<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetLocation"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <View
            android:id="@+id/dot1"
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@color/black"

            />

        <View
            android:id="@+id/dot2"
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@color/black"
            android:layout_marginLeft="8dp"
            />

        <View
            android:id="@+id/dot3"
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@color/grey"
            android:layout_marginLeft="8dp"
            />
        <View
            android:id="@+id/dot4"
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@color/grey"
            android:layout_marginLeft="8dp"
            />
        <View
            android:id="@+id/dot5"
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@color/grey"
            android:layout_marginLeft="8dp"
            />
        <View
            android:id="@+id/dot6"
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@color/grey"
            android:layout_marginLeft="8dp"
            />
        <View
            android:id="@+id/dot7"
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@color/grey"
            android:layout_marginLeft="8dp"
            />
        <View
            android:id="@+id/dot8"
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@color/grey"
            android:layout_marginLeft="8dp"
            />
        <View
            android:id="@+id/dot9"
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@color/grey"
            android:layout_marginLeft="8dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Where are you from?"
        android:textStyle="bold"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/description"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/welcome"
        android:layout_marginTop="20dp"
        android:text="This will help us personalize the app for you."
        android:textColor="@color/darkgrey"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/search_city"
        android:layout_below="@id/description"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edit_text"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:drawableRight="@drawable/search"
        android:hint="Search for your city"/>

    <!--Upper row-->
    <GridLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/search_city"
        android:columnCount="4"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Upper row -->
        <ImageButton
            android:id="@+id/bengaluru"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bengaluru"
            android:scaleType="centerInside"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:background="@drawable/border_edit_text"
            />

        <ImageButton
            android:id="@+id/mumbai"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mumbai"
            android:scaleType="centerInside"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:background="@drawable/border_edit_text"
            />

        <ImageButton
            android:id="@+id/delhi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/delhi"
            android:scaleType="centerInside"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:background="@drawable/border_edit_text"
            />

        <ImageButton
            android:id="@+id/kolkata"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/kolkata"
            android:scaleType="centerInside"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:background="@drawable/border_edit_text"
            />

        <!-- Middle row -->
        <ImageButton
            android:id="@+id/chennai"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/chennai"
            android:scaleType="centerInside"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:background="@drawable/border_edit_text"
            />

        <ImageButton
            android:id="@+id/hyderabad"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hyderabad"
            android:scaleType="centerInside"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:background="@drawable/border_edit_text"
            />

        <ImageButton
            android:id="@+id/ahmedabad"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ahmedabad"
            android:scaleType="centerInside"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:background="@drawable/border_edit_text"
            />

        <ImageButton
            android:id="@+id/pune"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pune"
            android:scaleType="centerInside"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:background="@drawable/border_edit_text"
            />

        <!-- Lower row -->
        <ImageButton
            android:id="@+id/lucknow"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/lucknow"
            android:scaleType="centerInside"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:background="@drawable/border_edit_text"
            />

        <ImageButton
            android:id="@+id/jaipur"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/jaipur"
            android:scaleType="centerInside"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:background="@drawable/border_edit_text"
            />

        <ImageButton
            android:id="@+id/kochi"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/kochi"
            android:scaleType="centerInside"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:background="@drawable/border_edit_text"
            />

        <ImageButton
            android:id="@+id/chandigarh"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/chandigarh"
            android:scaleType="centerInside"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:background="@drawable/border_edit_text"
            />

    </GridLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@id/next"
        android:background="@color/grey"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!--BUTTONS-->
    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:text="BACK"
        android:textColor="@color/black"
        android:background="@android:color/transparent"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="NEXT"
        android:textColor="@color/black"
        android:background="@android:color/transparent"
        android:textSize="15dp"
        android:textStyle="bold"/>

</RelativeLayout>
