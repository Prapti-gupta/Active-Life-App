<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA000000"> <!-- Semi-transparent black overlay -->

    <!-- Full-screen Dialog Box -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/gradient_overlay_dialog"
        android:padding="20dp">

        <!-- Title Text -->
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quit Workout?"
            android:textStyle="bold"
            android:textSize="40sp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp" />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your progress won't be saved."
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_below="@id/dialog_title"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp" />

        <!-- Quit Button -->
        <Button
            android:id="@+id/quit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quit"
            android:layout_marginTop="70dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/babyblue"
            android:padding="5dp"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/sub_title"
            android:layout_marginRight="10dp"/>

        <!-- Resume Button -->
        <Button
            android:id="@+id/resume_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resume"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/babyblue"
            android:textSize="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/quit_button"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

</RelativeLayout>
