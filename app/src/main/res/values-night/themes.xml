<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme that supports both light and dark modes -->


    <style name="Base.Theme.ActiveLife" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize the background color -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/greentick</item>

        <!-- Customize the status bar color -->
        <item name="android:statusBarColor">@color/dress</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowIsTranslucent">true</item>  <!--removes default splash screen-->
    </style>



    <style name="Theme.ActiveLife" parent="Base.Theme.ActiveLife" />
</resources>